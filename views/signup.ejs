        <style>
            body {
  color: #DBC000;
  font: 100%/1.6 "Heebo", sans-serif;
  overflow-x: hidden;
  width: 100%;
}
.flex {
  align-items: center;
  display: flex;
  justify-content: center;
}
.scene {
  background: #D6C959;
  height: 100vh;
  position: relative;
}
.card {
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
  background: rgba(254, 254, 254, 0.075);
  border: 1px solid rgba(254, 254, 254, 0.18);
  border-radius: 15px;
  box-shadow: 0 10px 35px 0 rgba(54, 33, 0, 0.65);
  color: black;
  max-width: 300px;
  overflow: hidden;
  padding: 20px 30px 50px 30px;
  position: relative;
  text-align: center;
  z-index: 1;
}
.card__heading {
  font-size: 1.35rem;
  font-weight: 800;
  margin-bottom: 15px;
}
.card__input {
  background: rgba(254, 254, 254, 0.075);
  border: 1px solid rgba(255, 178, 330, 0.3);
  border-radius: 3px;
  box-sizing: border-box;
  color: #000000;
  font-size: 1rem;
  letter-spacing: 0.15rem;
  padding: 10px;
  width: 100%;
}
.card__input:focus,
.card__input:active {
  background: rgba(254, 254, 254, 0.08);
  border: 1px solid rgba(255, 178, 330, 0.3);
  outline: none;
}
.card__button {
  background: #DBC000;
  border: none;
  border-radius: 20px;
  color: black;
  margin: 15px auto 0 auto;
  padding: 8px 20px;
}
.card__button:focus,
.card__button:active {
  background: rgba(255, 178, 308, 0.3);
  outline: none;
}
.card__button:hover {
  background: rgba(255, 178, 308, 0.3);
  cursor: pointer;
}
button {
  background: #DBC000;
  border: none;
  border-radius: 30px;
  color: white;
  margin: 10px auto 0 auto;
  padding: 8px 20px;
}
.fish {
  width: 50px;
  margin: -10px;
}
        </style>
        <script>
            function register() {
                let form = document.getElementById("form_register");
                if ( !form.checkValidity() ) {
                    form.reportValidity();
                    console.log( "reportValidity" );
                    return true;
                }
                let user = {
                    id: form.id.value,
                    pw: form.pw.value,
                    name: form.name.value,
                    nickName: form.nickName.value
                };
                axios({
                    method: 'post',
                    url: '/auth/join',
                    data: user
                }).then((rep) => {return rep.data;} )
                .then((data) => {
                    alert("회원가입 성공");
                    document.location.href="/user/signin";
                });
            }
        </script>
    </head>
    <body>
        <div class="scene flex">
            <section class="card">
                <img src="/static/img/IMG_0652.PNG" class="card-img-top" alt="...">
            <h1 class="card__heading">
                <span> 회원가입 </span>
            </h1>
            <form class="card__form" id="form_register">
                <label for="ID" class="visually">이름 :  </label>
                <div><input id="ID" class="card__input" type="text" name="name" required /></div>
                <label for="ID" class="visually">아이디 :  </label>
                <div><input id="ID" class="card__input" type="text" name="id" required /></div>
                <label for="password" class="visually">비밀번호 : </label>
                <input id="password" class="card__input" type="password" name="pw" required />
                <label for="nickname" class="visually">닉네임 : </label>
                <input id="nickname" class="card__input" type="text" name="nickName" required />
                <button class="card__button" type="button" onclick="register();">
                <span>회원가입</span>
                </button>
            </form>
            <a href="/user/signin">로그인</a>
            </section>
        </div>
    </body>
</html>